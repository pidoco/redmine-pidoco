<div class="box">
  <h3><%= l(:prototypes_for_project) %></h3>
  <% @project.pidoco_keys.each do |pidoco_key| %>
  	<% prototypes = Prototype.find_with_api(:all, :conditions => {:pidoco_key_id => pidoco_key.id}) %>
  	  <% if prototypes %>
  	    <% prototypes.each do |prototype| %>
    			<li><strong><%= h prototype.name %></strong>:
    			  <% time = Time.at(Integer(prototype.last_modified)/1000) %>
    				<%= l(:last_change_on) %> <%= format_time(time) %>,
            <%= Discussion.count(:conditions => {:prototype_id => prototype.id}) %>
            <%= link_to(l(:discussions), 
              :controller => :discussions, 
              :action => :index, 
              :project => @project, 
              :anchor => h("prototype_#{prototype.id}")) %>
     			</li>
   			<% end %>
   		<% else %>
    		<%= l(:no_prototypes_available) %>
			<% end %>
	<% end %>
</div>